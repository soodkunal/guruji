function g8_var_init(){
	# One time work, initial variables

	export G8_CGPT_KEY="aaa"
	export G8_ELAB_KEY="aaaaa"
	export GPT_API_URL="https://api.openai.com/v1/chat/completions"
	export ELAB_API_URL="https://api.elevenlabs.io/v1/text-to-speech/$G8_ELABS_VOICE_ID"

	echo "  + Initializing environment variables..." 
	export G8_VER=`cat G8_VER`
	export G8_HOME="$HOME"
	export G8_PROJ="guruji"
	export G8_PROJ_DIR="$G8_HOME/$G8_PROJ/anaconda3"
	export G8_VT_DIR="$G8_HOME/$G8_PROJ/video-retalking/"
	export G8_ANACONDA_VER="Anaconda3-2023.09-0-Linux-x86_64.sh"

	# Setup a debug flag, if set errors will be shown
	export G8_DBUG=TRUE

	# setting default elevenlabs ID
	export G8_ELABS_VOICE_ID="pNInz6obpgDQGcFmaJgB"  
	G8_ELAB_OP_FORMAT="mp3_44100_128"
	G8_ELAB_STABILITY=1
	G8_ELAB_SIMBOOST=1
	G8_ELAB_STYLE=0.5

	export DB_FILE="$G8_HOME/G8_PROJ/guruji.db"
	export HEADER="prof_id;Prof_name;Prof_description;11labs_id"

	# ==== NEW LOGIC STARTS HERE ====
	echo -n "Enter Professor ID: "
	read prof_id

	# Check if professor exists in DB
	exists=$(sqlite3 "$DB_FILE" "SELECT COUNT(*) FROM professors WHERE prof_id='$prof_id';")

	if [ "$exists" -eq 0 ]; then
		echo "[ERROR] Professor with ID '$prof_id' does not exist in database!"
		exit 1
	fi

	# Fetch professor name
	prof_name=$(sqlite3 "$DB_FILE" "SELECT Prof_name FROM professors WHERE prof_id='$prof_id';")
	export G8_PROF_ID="$prof_id"
	export G8_PROF_NAME="$prof_name"

	# Generate timestamp for unique file naming
	timestamp=$(date +%Y%m%d_%H%M%S)

	# Define paths with timestamp
	export G8_IN_PROF_TXT="$G8_HOME/$G8_PROJ/input/g8_in_${G8_PROF_NAME}_${timestamp}.txt"
	export G8_IN_SAMPLE_IMG="$G8_HOME/$G8_PROJ/in/g8_in_${G8_PROF_NAME}_${timestamp}.jpg"
	export G8_IN_SAMPLE_AUD="$G8_HOME/$G8_PROJ/in/g8_in_${G8_PROF_NAME}_${timestamp}.mp3"
	export G8_IN_SAMPLE_VID="$G8_HOME/$G8_PROJ/in/g8_in_${G8_PROF_NAME}_${timestamp}.mp4"
	export G8_IN_MTDT="$G8_HOME/$G8_PROJ/input/g8_in_${G8_PROF_NAME}_${timestamp}.md"

	export G8_OPS_GPT_TXT="$G8_HOME/$G8_PROJ/ops/g8_ops_gpt_${G8_PROF_NAME}_${timestamp}.txt"
	export G8_OPS_AUDIO_FILE="$G8_HOME/$G8_PROJ/ops/g8_ops_11lab_${G8_PROF_NAME}_${timestamp}.wav"
	export g8_OPS_MTDT="$G8_HOME/$G8_PROJ/ops/g8_ops_mtdt_${G8_PROF_NAME}_${timestamp}.md"

	export G8_OUTPUT_LECTURE_FILE="$G8_HOME/$G8_PROJ/out/g8_out_${G8_PROF_NAME}_${timestamp}.mp4"

	echo "  + Professor $G8_PROF_NAME ($G8_PROF_ID) initialized with unique timestamp $timestamp"
	# ==== NEW LOGIC ENDS HERE ====
}
